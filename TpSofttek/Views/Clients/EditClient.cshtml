@model ModelClient
@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Cliente</h1>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Editar Cliente
        </div>

    </div>
    <div class=" card-body">
        <form asp-action="EditClient" asp.controller="Clients" method="post">
            <input asp-for="Id" type="hidden" class="form-control">

            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="nombre" type="text" class="form-control">
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Dirección</label>
                <input asp-for="direccion" type="text" class="form-control">
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Población</label>
                <input asp-for="poblacion" type="text" class="form-control">
                <span asp-validation-for="poblacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Telefono</label>
                <input asp-for="telefono" type="text" class="form-control">
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Clients" asp-action="ListClient" class="btn btn-warning">Volver </a>
        </form>

    </div>
</div>

