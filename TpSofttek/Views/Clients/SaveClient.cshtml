@model ModelClient
@{
    ViewData["Title"] = "SaveClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="SaveClient" asp.controller="Clients" method="post">
    <div class="form-group">
        <label >Nombre</label>
        <input asp-for="nombre" type="text" class="form-control" >
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Dirección</label>
        <input asp-for="direccion" type="text" class="form-control">
        <span asp-validation-for="direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Población</label>
        <input asp-for="poblacion" type="text" class="form-control">
        <span asp-validation-for="poblacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Telefono</label>
        <input asp-for="telefono" type="text" class="form-control">
        <span asp-validation-for="telefono" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Clients" asp-action="ListClient" class="btn btn-warning">Volver </a>
</form>
