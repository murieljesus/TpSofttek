@model ModelClient
@{
    ViewData["Title"] = "DeleteClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Cliente</h1>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            ELiminar Cliente
        </div>
        <div class="card-body">
            <form asp-action="DeleteClient" asp-controller="Clients" method="post">
                <input asp-for="Id" type="hidden" class="form-control">

                <div class="alert alert-danger" role="alert">
                    ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.nombre)?
                </div>

                <button type="submit" class="btn btn-primary">Eliminar</button>
                <a asp-controller="Clients" asp-action="ListClient" class="btn btn-warning">Volver </a>
            </form>
        </div>
    </div>
</div>